{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/source",
            "runtimeExecutable": "/usr/bin/google-chrome-stable",
            "sourceMaps": true,
            "skipFiles": [
                "node_modules/**",
                "index.bundle.js"
            ],
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceRoot}/*"
            },
            "trace": true
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        },
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000/",
            "sourceMaps": "server",
            "pathMappings": [{
                "url": "webpack://",
                "path": "${workspaceFolder}"
            }]//,
            // "log": {
            //     "consoleLevel": {
            //         "PathConversion": "Debug",
            //         "default": "Error"
            //     }
            // }
        },
        {
            "name": "Attach Firefox",
            "type": "firefox",
            "request": "attach",
            "sourceMaps": "client"
        },
        {
            "name": "Launch Firefox addon",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "addonType": "addonSdk",
            "addonPath": "${workspaceFolder}"
        }
    ]
}